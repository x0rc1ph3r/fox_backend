model User {
  id                String   @id @default(uuid())
  walletAddress     String   @unique
  createdAt         DateTime @default(now())

  rafflesCreated    Raffle[]     @relation("RaffleCreator")
  favouriteRaffles  Raffle[]     @relation("FavouriteRaffle")
  entries           Entry[]
  transactions      Transaction[]

  @@map("users")
  @@index([walletAddress])
}


